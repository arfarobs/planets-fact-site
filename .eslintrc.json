{
    "env": {
        "browser": true,
        "es2021": true,
				"jest/globals": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
				"plugin:storybook/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
				"jest"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
				"react/react-in-jsx-scope": "off"
    }
}
